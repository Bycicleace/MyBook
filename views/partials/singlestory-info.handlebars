<article class="story">
  <div class="story-container">
    <div class = "header">
      <h3>{{ title }}</h3>
      <h3>{{ user.pen_name }}</h3>
    </div>
    <div class="posts">
      {{#each posts}}
      <div class ="post-container">
        <div class ="header">
          {{user.pen_name}}
        </div>
        <div class ="post-content">
          {{ this.content }}
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</article>